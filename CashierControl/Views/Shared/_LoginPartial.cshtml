@using Microsoft.AspNetCore.Identity
@using CashierControl.Areas.Identity.Data

@inject SignInManager<Cashier> SignInManager
@inject UserManager<Cashier> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @UserManager.GetUserAsync(User).Result.Name</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-outline-purple">Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

<style>
    .btn-outline-purple {
        color: #6f42c1;
        background-color: transparent;
        border-color: #6f42c1;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-purple:hover {
            background-color: #6f42c1;
            color: #ffffff;
        }


</style>
